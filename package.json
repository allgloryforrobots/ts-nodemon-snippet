{
  "name": "ts-nodemon",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {

    "//": "открываем node.js инструменты разработчика",
    "devjs": "nodemon --inspect index.js",

    "//": "запускаем напрямую через nodemon ts файл, для этого кейса нужны настройки nodemon",
    "devts": "nodemon --inspect index.ts",

    "//": "теперь сборка в 2 команды, сначала компиляция, потом nodemon из конкретной папки",
    "watch": "tsc -w",
    "devsrc": "nodemon .\\dist\\index.js"

  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.2.5",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1"
  }
}
